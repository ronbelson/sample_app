source 'https://rubygems.org'

gem 'rails', '3.2.1'
gem 'jquery-rails'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'sqlite3'
  gem 'rspec-rails', '2.8.0'
  gem 'annotate', '2.4.0'
end

group :test do
  gem 'rspec-rails', '2.8.0'
  gem 'webrat', '0.7.1'
  gem 'spork', '0.9.0'
end

group :production do
 gem 'thin'
 gem 'pg'
end

